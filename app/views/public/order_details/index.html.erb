<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
<tbody>
  <% @order_details.each do |detail| %>
    <tr>
    <td><%= detail.order.created_at %></td>
      <td>
        <%= detail.order.postal_code %><br />
        <%= detail.order.addresses_name %><br />
        <%= detail.order.name %>
      </td>
      <td><%= detail.product.name %><br /></td>
      <td><%= detail.order.total_payment %></td>
      <td><%= detail.making_status %></td>
      <td><%= link_to "表示する", order_detail_path(detail.id), class: "btn btn-primary" %></td>
    </tr>
  <% end %>
</tbody>
</table>