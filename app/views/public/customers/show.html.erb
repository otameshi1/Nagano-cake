<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h3 class="mb-5">マイページ</h3>
      <div class="d-flex justify-content-between mb-5">
        <h4 class="index_left">登録情報</h4>
        <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success w-25" %>
      </div>
      <table class="table table-bordered mb-5">
        <tr>
          <td style="width:25%">氏名</td>
          <td style="width:75%"><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div class="d-flex justify-content-between">
        <h4 class="index_left">配送先 <i class="fas fa-truck"></i></h4>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary w-25 mb-5" %>
      </div>
      <div class="d-flex justify-content-between">
        <h4 class="index_left">注文一覧 <i class="fas fa-shopping-basket"></i></h4>
        <%= link_to "一覧を見る", order_details_path, class: "btn btn-primary w-25" %>
      </div>
    </div>
  </div>
</div>