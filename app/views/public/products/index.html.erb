<div class="container">
    <div class="row">
        <div class="col-xl-3">
            <table>
                <thead>
                    <td>ジャンル検索</td>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                    <tr>
                        <td><%=  %></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xl-9">
            <h3>商品一覧<span class="small">(全<%= @products.count %>件)</span></h3>
            <div class="rrtt">
                <% @products.each do |product| %>
                    <%= link_to product_path(product.id) do %>
                        <div class="image"><%= attachment_image_tag product, :image, size: "200x200", fallback:"no_image.png" %></div>
                        <div class="name"><%= product.name %></div>
                        <div class="price">¥<%= number_to_currency(product.price,:precision =>0, :format=>"%n%u", :unit=>"円") %>（税抜き）</div>
                    <% end %>
                <% end %>
            </div>
        </div>
    <%= paginate @products %>
    </div>
</div>

