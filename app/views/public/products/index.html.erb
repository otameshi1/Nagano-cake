<div class="container">
    <div class="row">
        <div class="col">
            ジャンル検索
        </div>
        <div class="col">
            <h3>商品一覧<span>(全<%= @product.count %>件)</span></h3>
            <% @products.each do |product| %>
                <%= link_to product_path(product.id) do %>
                    <%= attachment_image_tag product, :image, size: "200x200", fallback:"no_image.png" %>
                    <%= product.name %>
                <% end %>
                ¥<%= product.price %>
            <% end %>
        </div>
    <%= paginate @product %>
    </div>
</div>