<h1>配送先登録 / 一覧</h1>
<%= form_with model:@address, local:true do |f| %>
  <p>
    郵便番号(ハイフンなし)
    <%= f.text_field :postal_code, placeholder: "0000000" %>
  </p>
  <p>
    住所
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </p>
  <p>
    宛名
    <%= f.text_field :name, placeholder: "令和道子" %>
  </p>
  <%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>

<table>
  <thead>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td>
      <%= link_to "編集する", edit_address_path, class: "btn btn-success" %>
      <%= link_to "削除する", address_path, method: :delete, class: "btn btn-danger" %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>