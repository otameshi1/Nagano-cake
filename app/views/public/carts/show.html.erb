<h1>ショッピングカート</h1>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.order_details.quantity %></td>
      <td><%= #{"product.price" * "product.order_details.quantity"} %></td>
      <td><%= link_to "削除する", cart_item_path(product.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
    </tr>
  </tbody>
</table>

<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>

<%# 上記tableの小計欄の合計金額 %>
<table>
  <td>合計金額</td>
  <td></td>
</table>

<div>
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
</div>