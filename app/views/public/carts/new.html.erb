<h1>ショッピングカート</h1>
<%= link_to "カートを空にする", cart_destroy_path, method: :delete, class: "btn btn-danger" %>
<% @sum = 0 %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
    <tr>
      <td><%= cart.product.name %></td>
      <td><%= cart.product.price * 1.1 %></td>
      <%= form_with model: cart, local:true do |f| %>
        <td><%= f.number_field :quantity %></td>
        <td><%= f.submit "変更", class: "btn btn-success" %></td>
      <% end %>
      <td><%= cart.product.price * 1.1 * cart.quantity %></td>
      <% @sum += cart.price * 1.1 * cart.quantity %>
      <td><%= link_to "削除する", cart_path(cart.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>

<%# 上記tableの小計欄の合計金額 小計金額の欄にsumをたし計算する %>
<table>
  <td>合計金額</td>
  <td><%= @sum %></td>
</table>

