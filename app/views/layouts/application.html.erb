<!DOCTYPE html>
<html>
  <head>
    <title>Naganokaki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="navbar navbar-expand-lg bg-white navbar-white">
        <div class="container">
          <%= link_to "LOGO", root_path, class: 'navbar-brand' %>
          <button class="navbar-toggler" type="button" date-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <% if customer_signed_in? %>
            <div class="navbar-collapse collapse show" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto nav">
                <li　class="btn">
                  <%= link_to "マイページ", class: 'text-light' %>
                </li>
                <li　class="btn">
                  <%= link_to "商品一覧", class: 'navbar-brand' %>
                </li>
                <li　class="btn">
                  <%= link_to "カート", class: 'navbar-brand' %>
                </li>
                <li　class="btn">
                  <%= link_to "ログアウト", class: 'navbar-brand' %>
                </li>
              </ul>
            </div>
          <% else %>
            <div class="navbar-collapse collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto nav">
                <li　class="btn">
                  <%= link_to "About", class: 'text-light nav-link' %>
                </li>
                <li　class="btn">
                  <%= link_to "商品一覧", class: 'text-light' %>
                </li>
                <li　class="btn">
                   <%= link_to "新規登録", class: 'text-light' %>
                </li>
                <li　class="btn">
                  <%= link_to "ログイン", class: 'text-light' %>
                </li>
              </ul>
            </div>
          <% end %>

        </div>
      </div>

    </header>
    <%= yield %>
  </body>
</html>
