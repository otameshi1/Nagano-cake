<!DOCTYPE html>
<html>
  <head>
    <title>Naganokaki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="navbar navbar-expand-lg bg-white navbar-white">
        <div class="container">
          <%= link_to "LOGO", root_path, class: 'navbar-brand' %>
          <button class="navbar-toggler" type="button" date-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
       <%#　ーーーー カスタマー側ヘッダー ーーーーー%>
          <% if customer_signed_in? %>
            <div class="navbar-collapse collapse show" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto nav">
                <li　class="btn1">
                  <%= link_to "マイページ", customer_path(current_customer.id), class: 'navbar-brand' %>
                </li>
                <li　class="btn1">
                  <%= link_to "商品一覧", products_path, class: 'navbar-brand' %>
                </li>
                <li　class="btn1">
                  <%= link_to "カート", cart_path(current_customer.id), class: 'navbar-brand' %>
                </li>
                <li　class="btn1">
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'navbar-brand' %>
              </ul>
               <%= form_with url:search_path, method: :get, local:true do |f| %>
                <%= f.text_field "seach[value]", placeholder: "Search" %>
                <%= f.select "seach[how]", options_for_select({完全一致: :"match", 部分一致: :"partical"}) %>
                <%= f.submit "検索" %>
              <% end %>
            </div>
            <%#　ーーーー 管理側ヘッダー ーーーーー%>
          <% elsif admin_signed_in? %>
           <div id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto nav">
                <li　class="btn1">
                  <%= link_to "商品一覧", admin_products_path, class: 'navbar-brand' %>
                </li>
                <li　class="btn1">
                  <%= link_to "会員一覧", admin_customers_path , class: 'navbar-brand' %>
                </li>
                <li　class="btn1">
                  <%= link_to "注文商品一覧", admin_order_details_path, class: 'navbar-brand' %>
                </li>
                <li　class="btn1">
                  <%= link_to "ジャンル一覧", admin_genres_path, class: 'navbar-brand' %>
                </li>
                <li　class="btn1">
                  <%= link_to "ログアウト",destroy_admin_session_path,method: :delete,class: 'navbar-brand' %>
                </li>
              </ul>
              <%= form_with url:search_path, local:true do |f| %>
                <%= f.text_field "seach[value]", placeholder: "Search" %>
                <%= f.select "seach[how]", options_for_select({完全一致: :"match", 部分一致: :"partical"}) %>
                <%= f.submit "検索" %>
              <% end %>
              <h2>(admin状態)</h2>*↑あとで消します
            </div>
              <%#　ーーーー どちらでもないヘッダー ーーーーー%>
          <% else %>
            <div class="navbar-collapse collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto nav">
                <li　class="btn">
                  <%= link_to "About", homes_about_path, class: 'navbar-brand' %>
                </li>
                <li　class="btn">
                  <%= link_to "商品一覧", products_path, class: 'navbar-brand' %>
                </li>
                <li　class="btn">
                   <%= link_to "新規登録", new_customer_registration_path, class: 'navbar-brand' %>
                </li>
                <li　class="btn">
                  <%= link_to "ログイン", new_customer_session_path, class: 'navbar-brand' %>
                </li>
              </ul>
              <%= form_with url:search_path, local:true do |f| %>
                <%= f.text_field "seach[value]", placeholder: "Search" %>
                <%= f.select "seach[how]", options_for_select({完全一致: :"match", 部分一致: :"partical"}) %>
                <%= f.submit "検索" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
