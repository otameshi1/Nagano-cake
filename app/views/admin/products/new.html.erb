<div class="container">
     <div class="row">
      <div class="col-mt-5 ">
          <h3 class="bg-info w-3">商品登録</h3>
          <%= form_with model: @new_product,url:admin_products_path,method: :post,local:true do |f| %>
              <table class="table table-sm text-align">
                <tbody>
                  <tr>
                    <th>商品画像</th>
                    <td><%=  f.attachment_field :image,class: "ml-5"%></td>
                  </tr>

                  <tr>
                    <th>商品名</th>
                    <td><%= f.text_field :name,class: "form-control ml-5" %></td>
                  </tr>

                  <tr>
                    <th>商品説明</th>
                    <td><%= f.text_area :introduction,class: "form-control ml-5" %></td>
                  </tr>

                   <tr>
                    <th>ジャンル</th>
                    <td class="m-5"><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] },:class => "mt-5" ,include_blank: "--選択して下さい--" %></td>
                    
                  </tr>
                  
                   <tr>
                    <th>価格</th>
                    <td><%= f.number_field :price,class: "form-control ml-5" %></td>
                  </tr>
                   <tr>
                    <th>販売ステータス</th>
                    <td><%= f.label :販売,class:'ml-5' %>
                        <%= f.radio_button :is_sale,:true %>
                        <!--販売中【0】-->
                        <%= f.label :販売停止 %>
                        <%= f.radio_button :is_sale,:false %></td>
                        <!--販売停止【1】-->
                  </tr>

                 </tbody>
                </table>
                  <div class="text-right">
                    <%= f.submit "新規登録" ,class: "btn btn-primary text-center" %>
                 </div>
              </div>
          <% end %>
    </div>
</div>
