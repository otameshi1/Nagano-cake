<h1>会員一覧</h1>


<div class="container">
 <table class="table table-hover m-5">
    <thead>
      <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <% @customers.each do |costomers| %>
    <tbody>
      <tr>
        <th scope="row"><%= costomers.id %></th>
        <td><%= link_to costomers.first_name + costomers.last_name,admin_customer_path(costomers.id) %></td>
        <td><%= costomers.email %></td>
        <td><%= costomers.is_deleted %></td>
      </tr>
    </tbody>
    <% end %>
 </table>
 </div>


