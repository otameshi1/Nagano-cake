<div class="container">
   <h3 class="title-3"><%= @customer.first_name + @customer.last_name %>さんの会員詳細</h3>
  <div class="row m-3">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name + @customer.last_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>


        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>


        <tr>
          <th>会員ステータス</th>
                <!--falseだったら、退会・入会判断-->
        <% if @customer.is_deleted == false %>
        　<td>有効</td>
        <% else %>
        <td>無効</td>
        <% end %>
        </tr>
        <tr>
        <th></th>
        <td><%= link_to "編集する",edit_admin_customer_path(@customer),class:'btn btn-danger m-3' %>
        <%= link_to "注文一覧を見る", admin_order_detail_path(@customer),class:'btn btn-primary' %></td>
        </tr>

      </tbody>
    </table> 
  </div>
</div>






