<div class="container">
   <h4><%= @customer.first_name + @customer.last_name %>さんの会員詳細</h4>
  <div class="row m-5">
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name + @customer.last_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>


        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>


        <tr>
          <th>会員ステータス</th>
                <!--falseだったら、退会・入会判断-->
        <% if @customer.is_deleted == false %>
        　<td>有効</td>
        <% else %>
        <td>無効</td>
        <% end %>
        </tr>


      </tbody>
    </table> 
  </div>
</div>






