<h1> <%= @customer.last_name %>さんの会員情報 %> </h1>

<%= form_with model:@costomer,local:true do |f| %>

<p>会員ID</p>
<%= @customer.id %>

<p>氏名</p>
<%= f.text_field :first_name %>
<%= f.text_field :last_name %>

<p>フリガナ</p>
<%= f.text_field :first_name_kana %>
<%= f.text_field :last_name_kana %>

<p>郵便番号</p>
<%= f.number_field :postal_code %>

<p>住所</p>
<%= f.text_area :address %>

<p>電話番号</p>
<%= f.telephone_field :phone_number %>

<p>電話番号</p>
<%= f.email_field :email %>

<p>退会ステータス</p>
<%= f.radio_botton_tag("r1","退会") %>
<%= f.ladel_tag("r1_radio1","退会") %>
<%= f.radio_botton_tag("r2","入会済み") %>
<%= f.ladel_tag("r2_radio2","入会済み") %>

<% end %>

