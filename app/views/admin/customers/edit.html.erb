<div class="container">
  <div class="row">

<h4 class="title-3"> <%= @customer.first_name + @customer.last_name %>さんの会員情報  </h4>
</div>

  <%= form_with model:@customer,url:admin_customer_path,method: :PATCH,local:true do |f| %>
<div class="col">
<table class="table table-borderless">
  <tbody>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :first_name %>　<%= f.text_field :last_name %></td>
      </tr>
      
      <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :first_name_kana %>　<%= f.text_field :last_name_kana %></td>
      </tr>
      
      <tr>
      <th>郵便番号</th>
      <td><%= f.number_field :postal_code %></td>
      </tr>
      
      <tr>
      <th>住所</th>
      <td><%= f.text_field :address,size: 45 %></td>
      </tr>
      
      <tr>
      <th>電話番号</th>
      <td><%= f.telephone_field :phone_number %></td>
      </tr>
      
      <tr>
      <th>退会ステータス</th>
      <td><%= f.label :有効 %>
          <%= f.radio_button :is_deleted,:true %>
          <!--販売中【0】-->
          <%= f.label :退会 %>
          <%= f.radio_button :is_deleted,:false %></td>
          <!--販売停止【1】-->


      </tr>

      <tr>
      <th></th>
      <td><%= f.submit"変更を保存",class:"btn btn-secondary" %></td>
      </tr>

    </tbody>
  </table>
</div>
<% end %>
</div>
</div>
