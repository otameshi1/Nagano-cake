<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="col mt-5">
  <h3>管理者ログイン</h3>
    <table class="table table-borderless">
     
     <tbody>
    <div class="field">
      <tr>
        <td><%= f.label :メールアドレス,class:"fas fa-envelope-open-text" %><br /></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email",size: 50, placeholder: "sample@example.com" %></td>
      </tr>
      </div>
      
      <div class="field">
      <tr>
        <td> <%= f.label :パスワード %><br /></td>
        <td><%= f.password_field :password, autocomplete: "current-password",size: 50 %></td>
      </tr>
      </div>
      <tr>
       <div class="actions">
         <td></td>
        <td><%= f.submit "ログイン",class: "btn btn-primary  mt-2" %></td>
        </div>
      </tr>
      <% end %>
  </tbody>
</table>
 </div>
</div>
